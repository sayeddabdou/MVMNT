<!-- Booking Confirmation Page -->
<div class="confirmation-container">
    <div class="confirmation-box">
        <div class="confirmation-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1>Booking Status</h1>
        
        <div class="booking-details">
            <h2>Booking Details</h2>
            <% if (typeof hasBookingData !== 'undefined' && hasBookingData && typeof bookingData !== 'undefined') { %>
                <div class="detail-item">
                    <label>Name:</label>
                    <span><%= bookingData.name %></span>
                </div>
                <div class="detail-item">
                    <label>Email:</label>
                    <span><%= bookingData.email %></span>
                </div>
                <div class="detail-item">
                    <label>Phone:</label>
                    <span><%= bookingData.phone %></span>
                </div>
                <div class="detail-item">
                    <label>Class:</label>
                    <span><%= bookingData.className %></span>
                </div>
                <div class="detail-item">
                    <label>Type:</label>
                    <span><%= bookingData.classType %></span>
                </div>
                <div class="detail-item">
                    <label>Difficulty:</label>
                    <span><%= bookingData.difficulty %></span>
                </div>
                <div class="detail-item">
                    <label>Calories:</label>
                    <span><%= bookingData.calories %> KCal</span>
                </div>
                <div class="detail-item">
                    <label>Duration:</label>
                    <span><%= bookingData.duration %> minutes</span>
                </div>
                <div class="detail-item">
                    <label>Location:</label>
                    <span><%= bookingData.place %></span>
                </div>
                <div class="detail-item">
                    <label>Trainer:</label>
                    <span><%= bookingData.trainer %></span>
                </div>
                <div class="detail-item">
                    <label>Status:</label>
                    <span class="status-<%= bookingData.status.toLowerCase() %>">
                        <%= bookingData.status.charAt(0).toUpperCase() + bookingData.status.slice(1) %>
                    </span>
                </div>
                <div class="detail-item">
                    <label>Booking Date:</label>
                    <span><%= new Date(bookingData.bookingDate).toLocaleString() %></span>
                </div>
            <% } else { %>
                <p class="no-data-message">No booking details available. Please try booking a class first.</p>
            <% } %>
        </div>

        <% if (typeof hasBookingData !== 'undefined' && hasBookingData) { %>
            <p class="confirmation-message">Your booking has been confirmed successfully!</p>
            <p class="email-message">A confirmation email has been sent to <%= bookingData.email %>.</p>
        <% } else { %>
            <p class="confirmation-message">No active booking found.</p>
            <p class="email-message">Please try booking a class.</p>
        <% } %>

        <div class="action-buttons">
            <a href="/classes" class="btn btn-primary">Book Another Class</a>
            <a href="/" class="btn btn-secondary">Return to Home</a>
        </div>
    </div>
</div>

