<!-- Hero Section -->
<section class="supplements-hero" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), 
url('/images/supplements-background.jpg'); background-size: cover; background-position: center;">
    <div class="supplements-hero-content">
        <h1>PERFORMANCE SUPPLEMENTS</h1>
        <p>Premium formulas to fuel your workouts and recovery</p>
    </div>
</section>

<!-- Supplements Categories -->
<section class="supplement-categories">
    <div class="section-title">
        <h2>SUPPLEMENT TYPES</h2>
        <p>Find exactly what you need for your fitness goals</p>
    </div>
    
    <div class="category-grid">
        <% const categories = [
            { name: 'Protein', link: '#protein-products' },
            { name: 'Pre-Workout', link: '#preworkout-products' },
            { name: 'Recovery', link: '#recovery-products' }
        ]; %>
        
        <% categories.forEach(category => { %>
            <div class="category-card <%= category.name.toLowerCase() %>">
                <h3><%= category.name %></h3>
                <a href="<%= category.link %>" class="category-btn">Shop Now</a>
            </div>
        <% }); %>
    </div>
</section>

