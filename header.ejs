<header>
    <a href="/" class="logo">MVM<span>NT</span></a>
    
    <nav class="navbar">
        <a href="/" class="<%= currentPage === 'home' ? 'active' : '' %>">Home</a>
        <a href="/locations" class="<%= currentPage === 'locations' ? 'active' : '' %>">Locations</a>
        <a href="/classes" class="<%= currentPage === 'classes' ? 'active' : '' %>">Classes</a>
        <a href="/our-team" class="<%= currentPage === 'our-team' ? 'active' : '' %>">Our Team</a>
        <a href="/membership" class="<%= currentPage === 'membership' ? 'active' : '' %>">Membership</a>
        <a href="/user" class="<%= currentPage === 'user' ? 'active' : '' %>">My Account</a>
        <a href="/shop" class="<%= currentPage === 'shop' ? 'active' : '' %>">Shop</a>
    </nav>
    
    <button id="logout-btn" class="nav-btn" style="display: none;">Log Out</button>
    <button id="show-login-btn" class="nav-btn">Log In</button>
</header>

<!-- Login Modal -->
<div id="login-modal" class="modal">
    <div class="modal-box">
        <span class="close-btn">&times;</span>
        <h2>Login</h2>
        
        <form id="loginForm" method="POST" action="/login">
            <input type="text" id="username" name="username" placeholder="Username" required>
            <input type="password" id="password" name="password" placeholder="Password" required>
            
            <button type="submit" class="submit-login-btn">Login</button>
            
            <div class="error-message" id="login-server-error"><%= locals.error ? error : '' %></div>
        </form>
        
        <p style="margin-top: 1.5rem; font-size: 1.4rem;">
            Don\'t have an account? <a href="#" id="show-signup-link" style="color: var(--main-color);">Sign up</a>
        </p>
    </div>
</div>

<!-- Signup Modal -->
<div id="signup-modal" class="modal">
    <div class="modal-box">
        <span class="close-btn">&times;</span>
        <h2>Sign Up</h2>
        <form action="/signup" method="POST" class="signup-form" id="signupForm">
            <input type="text" id="username" name="username" value="<%= locals.username || '' %>" placeholder="Username" required>
            <input type="email" id="email" name="email" value="<%= locals.email || '' %>" placeholder="Email" required>
            <input type="password" id="password" name="password" placeholder="Password" required>
            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm Password" required>
            
            <div id="signup-server-error" class="error-message"></div>
            <div id="password-error" class="error-message"></div>
            
            <button type="submit" class="signup-btn">Sign Up</button>
            <p style="margin-top: 1.5rem; font-size: 1.4rem;">
                Already have an account? <a href="#" id="show-login-link" style="color: var(--main-color);">Login</a>
            </p>
        </form>
    </div>
</div> 