<!-- Shop Management Section -->
<section class="admin-section">
    <h1 class="section-title">Shop Management</h1>

    <div class="action-bar">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="product-search" placeholder="Search products..." />
        </div>
        <button class="sync-btn" id="sync-products-btn">
            <i class="fas fa-sync"></i> Sync Products
        </button>
        <button class="add-btn" id="add-product-btn">
            <i class="fas fa-plus"></i> Add Product
        </button>
    </div>

    <div class="table-container">
        <div class="table-header">
            <div>Image</div>
            <div>Name</div>
            <div>Category</div>
            <div>Price</div>
            <div>Stock</div>
            <div>Description</div>
            <div>Actions</div>
        </div>
        <div class="table-body" id="product-table-body">
            <% products.forEach(product => { %>
                <div class="table-row">
                    <div class="product-image">
                        <img src="/images/<%= product.image %>" alt="<%= product.name %>">
                    </div>
                    <div><%= product.name %></div>
                    <div><%= product.category %></div>
                    <div>$<%= product.price.toFixed(2) %></div>
                    <div><%= product.stock %></div>
                    <div class="description"><%= product.description %></div>
                    <div class="actions">
                        <button class="action-btn edit-product" data-id="<%= product._id %>" title="Edit">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn delete-product" data-id="<%= product._id %>" title="Delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Add/Edit Product Modal -->
<div id="product-modal" class="modal">
    <div class="modal-box">
        <span class="close-btn">&times;</span>
        <h2 id="modal-title">Add New Product</h2>
        <form id="product-form" enctype="multipart/form-data" novalidate>
            <div class="modal-body-scrollable">
                <input type="hidden" name="productId" id="product-id">
                
                <div class="form-group">
                    <label for="product-name">Product Name</label>
                    <input type="text" id="product-name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="product-category">Category</label>
                    <select id="product-category" name="category" required>
                        <option value="">Select Category</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.value %>"><%= category.label %></option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="product-price">Price ($)</label>
                    <input type="number" id="product-price" name="price" step="0.01" min="0" required>
                </div>
                
                <div class="form-group">
                    <label for="product-stock">Stock</label>
                    <input type="number" id="product-stock" name="stock" min="0" required>
                </div>
                
                <div class="form-group">
                    <label for="product-description">Description</label>
                    <textarea id="product-description" name="description" rows="3" required></textarea>
                </div>
                
                <div class="form-group">
                    <label for="product-image">Product Image</label>
                    <input type="file" id="product-image" name="image" accept="image/*">
                    <div id="image-preview"></div>
                </div>
            </div>
            
            <button type="submit" class="save-btn">Save Product</button>
        </form>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="confirm-modal" class="modal">
    <div class="modal-box">
        <h3>Are you sure you want to delete this product?</h3>
        <div class="modal-actions">
            <button class="btn delete-btn" id="confirm-delete">Yes, Delete</button>
            <button class="btn cancel-btn" id="cancel-delete">Cancel</button>
        </div>
    </div>
</div>

<!-- Notification Popup -->
<div id="popup-notification"></div>

<style>
.admin-section {
    padding: 20px;
    color: #fff;
}

.section-title {
    font-size: 24px;
    margin-bottom: 20px;
    color: #00ffff;
}

.action-bar {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
    align-items: center;
}

.search-box {
    flex: 1;
    position: relative;
}

.search-box input {
    width: 100%;
    padding: 10px 35px;
    border: 1px solid #2c3338;
    border-radius: 4px;
    background-color: #1a1d21;
    color: #fff;
}

.search-box i {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #00ffff;
}

.sync-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    background-color: #28a745;
    color: #fff;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    margin-right: 10px;
}

.sync-btn:hover {
    background-color: #218838;
}

.sync-btn i {
    font-size: 14px;
}

.add-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    background-color: #00ffff;
    color: #1a1d21;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.add-btn:hover {
    background-color: #00cccc;
}

.table-container {
    background-color: #1a1d21;
    border-radius: 8px;
    overflow: hidden;
}

.table-header {
    display: grid;
    grid-template-columns: 100px 2fr 1fr 1fr 1fr 2fr auto;
    padding: 15px;
    background-color: #2c3338;
    color: #00ffff;
    font-weight: bold;
    align-items: center;
}

.table-row {
    display: grid;
    grid-template-columns: 100px 2fr 1fr 1fr 1fr 2fr auto;
    padding: 15px;
    border-bottom: 1px solid #2c3338;
    align-items: center;
}

.product-image {
    width: 80px;
    height: 80px;
    overflow: hidden;
    border-radius: 4px;
}

.product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.description {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.actions {
    display: flex;
    gap: 8px;
    justify-content: flex-end;
}

.action-btn {
    padding: 8px;
    border: none;
    border-radius: 4px;
    background-color: #2c3338;
    color: #00ffff;
    cursor: pointer;
    transition: all 0.3s ease;
}

.action-btn:hover {
    background-color: #00ffff;
    color: #2c3338;
}

.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

.modal.show {
    display: flex;
}

.modal-box {
    background-color: #1a1d21;
    padding: 20px;
    border-radius: 8px;
    min-width: 400px;
    max-width: 600px;
    position: relative;
}

.close-btn {
    position: absolute;
    right: 20px;
    top: 20px;
    cursor: pointer;
    font-size: 24px;
    color: #00ffff;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 5px;
    color: #00ffff;
}

.form-group input,
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 8px;
    border: 1px solid #2c3338;
    border-radius: 4px;
    background-color: #1a1d21;
    color: #fff;
}

.form-group textarea {
    resize: vertical;
}

#image-preview {
    margin-top: 10px;
    max-width: 200px;
}

#image-preview img {
    width: 100%;
    border-radius: 4px;
}

.save-btn {
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 4px;
    background-color: #00ffff;
    color: #1a1d21;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
}

.save-btn:hover {
    background-color: #00cccc;
}

.modal-actions {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    margin-top: 20px;
}

.delete-btn {
    background-color: #dc3545;
    color: #fff;
}

.cancel-btn {
    background-color: #6c757d;
    color: #fff;
}

.btn {
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn:hover {
    opacity: 0.9;
}

.notification {
    position: fixed;
    bottom: 20px;
    right: 20px;
    padding: 15px 25px;
    border-radius: 4px;
    color: #fff;
    z-index: 1001;
    display: none;
}

.notification.success {
    background-color: #28a745;
}

.notification.error {
    background-color: #dc3545;
}
</style>

<%- contentFor('scripts') %>
<script src="/js/admin-shop.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add sync button functionality
    const syncBtn = document.getElementById('sync-products-btn');
    if (syncBtn) {
        syncBtn.addEventListener('click', async function() {
            try {
                const response = await fetch('/admin/shop/sync', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const result = await response.json();
                if (result.success) {
                    alert('Products synced successfully!');
                    window.location.reload();
                } else {
                    alert('Failed to sync products: ' + result.error);
                }
            } catch (error) {
                console.error('Error syncing products:', error);
                alert('Error syncing products. Please try again.');
            }
        });
    }
});
</script> 